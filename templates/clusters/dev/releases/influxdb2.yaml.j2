apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: influxdb2
  namespace: {{ edge.namespaces.obs }}
spec:
  interval: 5m
  chart:
    spec:
      chart: influxdb2
      version: 2.x.x
      sourceRef:
        kind: HelmRepository
        name: influxdata
        namespace: {{ edge.namespaces.obs }}
  values:
    adminUser:
      organization: {{ edge.influxdb.org }}
      bucket: {{ edge.influxdb.bucket }}
      user: {{ edge.influxdb.admin_user }}
      token: {{ edge.influxdb.token | default("default-dev-token") }}
      password: {{ edge.influxdb.admin_password }}
    persistence:
      enabled: true
      size: {{ edge.influxdb.size }}
    service:
      type: ClusterIP
